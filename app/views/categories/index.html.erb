<div class="header">

  <div class="inner-header">
    <h1 class="title">アイディア管理API</h1>
    <li class='new-post'>
      <%= link_to "New Post", new_category_path, class:"post-btn"%>
    </li>
  </div>

</div>

<div class="body">
  <%= search_form_for @p, url: categories_search_path do |f| %>
    <%= f.label :name_eq, 'カテゴリー' %>
    <%= f.collection_select :name_eq, @category_name, :name, :name,  include_blank: '指定なし' %>
    <br>
    <%= f.submit '検索' %>
  <% end %> 
</div>